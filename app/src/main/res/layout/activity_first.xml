<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/lightBackground"
        android:text="Thông tin sinh viên"
        android:textColor="@color/lightBackground"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:inputType="text"
        android:textColor="@color/lightBackground"
        android:textColorHint="@color/material_dynamic_neutral50" />

    <EditText
        android:id="@+id/edtMSSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MSSV"
        android:inputType="text"
        android:textColor="@color/lightBackground"
        android:textColorHint="@color/material_dynamic_neutral50" />

    <EditText
        android:id="@+id/edtClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lớp"
        android:inputType="text"
        android:textColor="@color/lightBackground"
        android:textColorHint="@color/material_dynamic_neutral50" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:textColor="@color/lightBackground"
        android:textColorHint="@color/material_dynamic_neutral50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sinh viên năm"
        android:textColor="@color/design_default_color_surface"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbYear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:text="Năm 1"
            android:textColor="@color/lightBackground" />

        <RadioButton
            android:id="@+id/rbYear2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:text="Năm 2"
            android:textColor="@color/lightBackground" />

        <RadioButton
            android:id="@+id/rbYear3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:text="Năm 3"
            android:textColor="@color/lightBackground" />

        <RadioButton
            android:id="@+id/rbYear4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:text="Năm 4"
            android:textColor="@color/lightBackground" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chuyên ngành"
        android:textColor="@color/lightBackground"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Máy tính HTN"
                android:textColor="@color/lightBackground" />

            <CheckBox
                android:id="@+id/cbMajor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điện tử"
                android:textColor="@color/lightBackground" />

            <CheckBox
                android:id="@+id/cbMajor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Viễn thông"
                android:textColor="@color/lightBackground" />

            <CheckBox
                android:id="@+id/cbMajor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBackground" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kế hoạch phát triển bản thân"
        android:textColor="@color/lightBackground"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Điền vào đây."
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:textColor="@color/lightBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gửi SMS" />

        <Button
            android:id="@+id/btncall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gọi " />

        <Button
            android:id="@+id/btncap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chụp ảnh" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin" />

    <ImageView
        android:id="@+id/imghinh"
        android:layout_width="90dp"
        android:layout_height="103dp"
        android:scaleType="centerCrop" />


</LinearLayout>